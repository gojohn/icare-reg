!!!
%html(ng-app="icare")
  %head
    %title 
      Lions
    = stylesheet_link_tag    "application"
    = javascript_include_tag "jquery", "https://ajax.googleapis.com/ajax/libs/angularjs/1.1.3/angular.min.js", "https://ajax.googleapis.com/ajax/libs/angularjs/1.1.3/angular-resource.min.js", "lib/bootstrap.min.js", "js/app", "js/registrations"
    = csrf_meta_tags

  %body
  .outer
    = image_tag("index2013.jpg", :size =>"850x148")
    .navbar
      .navbar-inner
        %a.brand(href="#")
          I Care 2013 Classic - Runners
        %input(ng-model="search" style="margin-top:6px;" placeholder="Search")
    .outer(ng-controller="ListCtrl")
      %table.table-striped.big#main
        %thead
          %tr
            %th First Name
            %th Last Name
            %th Size
            %th(width="200") Check In Time
            %th(width="200") Return Time
            %th(width="200") Emer. Contcat
        %tbody
          %tr(ng-repeat="reg in registrations | filter:search")
            %td
              {{reg.first_name.slice(0,12)}}
            %td
              {{reg.last_name.slice(0,12)}}
            %td
              {{reg.shirt_size.slice(0,4)}}
            %td
              {{reg.checkin_time.slice(11,-4)}}
              %button.btn(ng-click="checkIn(reg.registration_id)") Check In
            %td
              {{reg.return_time.slice(11,-4)}}
              %button.btn(ng-click="return(reg.registration_id)")Return
            %td
              {{reg.emergency_contact}}
              %br
              {{reg.emergency_phone}}

  .outer(ng-view)
!!!
%html(ng-app="icare")
  %head
    %title 
      Lions
    = stylesheet_link_tag    "application"
    = javascript_include_tag "jquery", "lib/angularjs/1.1.3/angular.min.js", "lib/angularjs/1.1.3/angular-resource.min.js", "lib/bootstrap.min.js", "js/app", "js/registrations"
    = csrf_meta_tags

  %body
  .outer
    = image_tag("index2013.jpg", :size =>"850x148")
    .navbar
      .navbar-inner
        %a.brand(href="#")
          I Care 2013 Classic - Riders
        %input(ng-model="search" style="margin-top:6px;" placeholder="Search")
    .outer(ng-controller="ListCtrl")
      %table.table-striped.big#main
        %thead
          %tr
            %th Name
            %th(width="100") Ride
            %th(width="170") Check-In Time
            %th(width="160") Return Time
            %th(width="200") Emer. Contact
        %tbody
          %tr(ng-repeat="reg in registrations | filter:search")
            %td
              {{reg.first_name.slice(0,12)}}
              {{reg.last_name.slice(0,12)}}
              %br
              {{reg.phone}}
              %br
              %br
            %td
              {{reg.ride.slice(0,12)}}
            %td
              %button.btn(ng-click="checkIn(reg.registration_id)")Check In
              {{reg.checkin_time.slice(11,-4)}}
            %td
              %button.btn(ng-click="return(reg.registration_id)")Return
              {{reg.return_time.slice(11,-4)}}
            %td
              {{reg.emergency_contact}}
              %br
              {{reg.emergency_phone}}
              %br
              %br

  .outer(ng-view)
